{
  "compilerOptions": {
    "lib": [
      "es2018",
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "test/test.ts"
  ],
  "exclude": [
    "dist"
  ]
}